{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ENV_NAME": {
            "type": "string"
        },
        "FA_NAME": {
            "type": "string"
        },
        "APPI_NAME": {
            "type": "string"
        },
        "ASP_NAME": {
            "type": "string"
        },
        "SA_NAME": {
            "type": "string"
        },
        "SB_NAME":{
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('SA_NAME')]",
            "apiVersion": "2021-06-01",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "tags": {
                "environment": "[parameters('ENV_NAME')]"
            },
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2020-02-02",
            "name": "[parameters('APPI_NAME')]",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('FA_NAME'))]": "Resource",
                "environment": "[parameters('ENV_NAME')]"
            },
            "properties": {
                "Application_Type": "web",
                "ApplicationId": "[parameters('APPI_NAME')]",
                "RetentionInDays": 30
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2021-02-01",
            "name": "[parameters('ASP_NAME')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "properties": {
                "name": "[parameters('ASP_NAME')]",
                "computeMode": "Dynamic",
                "reserved": true
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2021-02-01",
            "name": "[parameters('FA_NAME')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp,linux",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('ASP_NAME'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('SA_NAME')]",
                "[resourceId('Microsoft.Insights/components', parameters('APPI_NAME'))]"
            ],
            "properties": {
                "reserved": true,
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('ASP_NAME'))]",
                "siteConfig": {
                    "linuxFxVersion": "custom",
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('APPI_NAME')), '2020-02-02').InstrumentationKey]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('SA_NAME'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('SA_NAME')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~4"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "custom"
                        },
                        {
                            "name": "APP_ID",
                            "value": "[parameters('APP_ID')]"
                        },
                        {
                            "name": "CLIENT_ID",
                            "value": "[parameters('CLIENT_ID')]"
                        },
                        {
                            "name": "CLIENT_SECRET",
                            "value": "[parameters('CLIENT_SECRET')]"
                        },
                        {
                            "name": "DISCORD_PUBLIC_KEY",
                            "value": "[parameters('DISCORD_PUBLIC_KEY')]"
                        },
                        {
                            "name": "RUST_LOG",
                            "value": "info"
                        },
                        {
                            // TODO: get the value from the parameter
                            "name": "SERVICE_BUS",
                            "value": "[concat('Endpoint=sb://', parameters('SB_NAME'), '/;SharedAccessKeyName=Discord;SharedAccessKey=', listKeys(resourceId('Microsoft.ServiceBus/namespaces', parameters('SB_NAME')), '2019-04-01').keys[0].value)]"
                        }
                    ]
                }
            }
        }
    ]
}